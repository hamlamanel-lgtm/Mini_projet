  <div id="paymentPopup">
    <div class="popup-box">

      <h2>Payment Details</h2>

      <div class="form-grid">

        <div class="field">
          <label>Date</label>
          <input type="date" id="payDate">
        </div>

        <div class="field">
          <label>Amount</label>
          <input type="number" id="payAmount" placeholder="Enter amount">
        </div>

        <div class="field">
          <label>Status</label>
          <select id="payStatus">
            <option value="Paid">Paid</option>
            <option value="Pending">Pending</option>
          </select>
        </div>

      </div>

      <div class="btn-row">
        <button class="cancel-btn" onclick="closePopup()">Cancel</button>
        <button class="save-btn" onclick="savePayment()">Save</button>
      </div>

    </div>
  </div>

<script>
  document.getElementById("payBtn").addEventListener("click", () => {
    document.getElementById("paymentPopup").style.display = "flex";
  });

  function closePopup() {
    document.getElementById("paymentPopup").style.display = "none";
  }

  function savePayment() {
    let date = document.getElementById("payDate").value;
    let amount = document.getElementById("payAmount").value;
    let status = document.getElementById("payStatus").value;

    if (!date  !amount  !status) return;

    closePopup();
  }
</script>

