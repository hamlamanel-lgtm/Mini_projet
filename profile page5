javascript

(() => {
  'use strict';
  const DEMO_EVENTS = [
    { id: 'e1', title: 'Orientation Meetup', date: '2025-09-10', time: '18:00', desc: 'Meet other members, learn about clubs and activities.' },
    { id: 'e2', title: 'Coding Workshop', date: '2025-10-02', time: '14:00', desc: 'Intro to web development using HTML/CSS/JS.' },
    { id: 'e3', title: 'Community Service Day', date: '2025-11-05', time: '09:00', desc: 'Join us for a day of volunteering in the neighbourhood.' },
    { id: 'e4', title: 'Guest Lecture: AI in Education', date: '2025-11-21', time: '16:00', desc: 'Industry speaker: Dr. Smith.' }
  ];

  const DEMO_NOTIFICATIONS = [
    { id: 'n1', text: 'Your membership was approved', ts: Date.now() - 1000 * 60 * 60 },
    { id: 'n2', text: 'New event posted: Coding Workshop', ts: Date.now() - 1000 * 60 * 60 * 6 },
    { id: 'n3', text: 'Volunteer signup confirmed', ts: Date.now() - 1000 * 60 * 60 * 24 }
  ];

  /* =========================
     Small helpers
     ========================= */
  function el(tag = 'div', attrs = {}, children = []) {
    const e = document.createElement(tag);
    for (const k in attrs) {
      if (k === 'class') e.className = attrs[k];
      else if (k === 'html') e.innerHTML = attrs[k];
      else e.setAttribute(k, attrs[k]);
    }
    (Array.isArray(children) ? children : [children]).forEach(c => {
      if (!c) return;
      if (typeof c === 'string') e.appendChild(document.createTextNode(c));
      else if (c instanceof Node) e.appendChild(c);
    });
    return e;
  }

  function escapeHtml(s) {
    if (s === null || s === undefined) return '';
    return String(s).replace(/[&<>"'`=\/]/g, function (c) {
      return {'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;','/':'&#x2F;','`':'&#x60;','=':'&#x3D;'}[c];
    });
  }

  function formatDate(iso) {
    try {
      const d = new Date(iso + 'T00:00:00');
      return d.toLocaleDateString(undefined, { year: 'numeric', month: 'short', day: 'numeric' });
    } catch (e) { return iso; }
  }

  function timeAgo(ts) {
    const now = Date.now();
    const diff = Math.floor((now - ts) / 1000);
    if (diff < 60) return `${diff}s ago`;
    if (diff < 3600) return `${Math.floor(diff / 60)}m ago`;
    if (diff < 86400) return `${Math.floor(diff / 3600)}h ago`;
    return `${Math.floor(diff / 86400)}d ago`;
  }

  /* =========================
     App state & nodes
     ========================= */
  const state = {
    page: 'home',
    events: (DEMO_EVENTS || []).slice(),
    notifications: (DEMO_NOTIFICATIONS || []).slice(),
    rightPanelOpen: false,
    modalOpen: false
  };

  // Query nodes that exist in your HTML
  const nodes = {
    sidebarBtns: Array.from(document.querySelectorAll('.sidebar .btn')),
    main: document.querySelector('.profile-area') || document.querySelector('main') || document.body,
    rightPanel: document.querySelector('.right, .right-panel') || null
  };

  /* =========================
     Modal (kept small & accessible)
     ========================= */
  const Modal = (function(){
    let container = null, lastFocused = null;
    function createContainer() {
      if (container) return container;
      container = el('div', { class: 'sc-modal-container', 'aria-hidden': 'true' });
      container.style.cssText = 'position:fixed;inset:0;display:flex;align-items:center;justify-content:center;z-index:9000;pointer-events:none;';
      document.body.appendChild(container);
      return container;
    }
    function open(content) {
      if (state.modalOpen) return;
      lastFocused = document.activeElement;
      const c = createContainer();
      c.innerHTML = '';
      const overlay = el('div', { class: 'sc-modal-overlay' });
      overlay.style.cssText = 'position:absolute;inset:0;background:rgba(0,0,0,0.45);pointer-events:auto;';
      const dialog = el('div', { class: 'sc-modal', role: 'dialog', 'aria-modal': 'true' });
      dialog.style.cssText = 'min-width:320px;max-width:920px;padding:18px;border-radius:10px;background:var(--panel,#2b2b2b);color:var(--white,#fff);pointer-events:auto;box-shadow:0 10px 30px rgba(0,0,0,0.5);transform:translateY(8px);opacity:0;transition:all .18s ease';
      if (typeof content === 'string') dialog.innerHTML = content;
      else dialog.appendChild(content);
      const closeBtn = el('button', { class: 'sc-modal-close', 'aria-label': 'Close' }, '✕');
      closeBtn.style.cssText = 'position:absolute;right:8px;top:8px;background:transparent;border:0;color:inherit;font-size:18px;cursor:pointer';
      closeBtn.addEventListener('click', close);
      c.appendChild(overlay);
      c.appendChild(dialog);
      dialog.appendChild(closeBtn);
      c.style.pointerEvents = 'auto';
      requestAnimationFrame(() => {
        c.style.opacity = '1';
        c.setAttribute('aria-hidden','false');
        dialog.style.opacity = '1';
        dialog.style.transform = 'translateY(0)';
      });
      trapFocus(dialog);
      overlay.addEventListener('click', close);
      state.modalOpen = true;
    }
    function close() {
      if (!state.modalOpen || !container) return;
      container.style.opacity = '0';
      container.setAttribute('aria-hidden','true');
      const dialog = container.querySelector('.sc-modal');
      if (dialog) {
        dialog.style.opacity = '0';
        dialog.style.transform = 'translateY(8px)';
      }
      setTimeout(() => {
        if (container) container.remove();
        container = null;
        state.modalOpen = false;
        if (lastFocused && lastFocused.focus) lastFocused.focus();
      }, 240);
    }
    function trapFocus(root) {
      const focusable = root.querySelectorAll('a[href],button:not([disabled]),textarea, input, [tabindex]:not([tabindex="-1"])');
      const arr = Array.prototype.slice.call(focusable);
      if (arr.length) arr[0].focus();
      function handler(e) {
        if (e.key === 'Tab') {
          const first = arr[0], last = arr[arr.length - 1];
          if (e.shiftKey && document.activeElement === first) {
            e.preventDefault(); last.focus();
          } else if (!e.shiftKey && document.activeElement === last) {
            e.preventDefault(); first.focus();
          }
        } else if (e.key === 'Escape') {
          close();
        }
      }
      root.addEventListener('keydown', handler);
    }
    return { open, close };
  })();

  /* =========================
     Toast
     ========================= */
  let toastEl = null;
  function showToast(msg, ms = 2200) {
    if (toastEl) toastEl.remove();
    toastEl = el('div', { class: 'sc-toast', html: escapeHtml(msg) });
    toastEl.style.cssText = 'position:fixed;left:50%;transform:translateX(-50%);bottom:36px;background:#222;padding:10px 14px;border-radius:10px;color:white;z-index:10000;opacity:0;transition:opacity .22s';
    document.body.appendChild(toastEl);
    requestAnimationFrame(() => toastEl.style.opacity = '1');
    setTimeout(() => {
      if (!toastEl) return;
      toastEl.style.opacity = '0';
      setTimeout(() => { if (toastEl) { toastEl.remove(); toastEl = null; } }, 260);
    }, ms);
  }

  /* =========================
     Right panel (if any)
     ========================= */
  function toggleRightPanel(force) {
    const rp = nodes.rightPanel;
    if (!rp) return;
    const next = (typeof force !== 'undefined') ? !!force : !state.rightPanelOpen;
    state.rightPanelOpen = next;
    if (next) {
      rp.classList.add('open');
      rp.style.transform = 'translateX(0)';
      rp.setAttribute('aria-hidden', 'false');
    } else {
      rp.classList.remove('open');
      rp.style.transform = 'translateX(12px)';
      rp.setAttribute('aria-hidden', 'true');
    }
  }

  /* =========================
     Sidebar wiring
     ========================= */
  function setActiveSidebar(btn) {
    nodes.sidebarBtns.forEach(b => {
      b.classList.remove('active');
      // remove inline active glow style
      b.style.boxShadow = '';
      b.style.outline = '';
    });
    if (btn) {
      btn.classList.add('active');
      // visual glow: set subtle outline + shadow to emulate screenshot
      btn.style.outline = '3px solid rgba(255,255,255,0.06)';
      btn.style.boxShadow = '0 6px 18px rgba(0,0,0,0.25), inset 0 6px 12px rgba(0,0,0,0.12)';
    }
  }

  function wireSidebar() {
    const btns = nodes.sidebarBtns || [];
    btns.forEach(b => {
      b.addEventListener('click', (e) => {
        e.preventDefault();
        const action = (b.dataset && b.dataset.action) ? b.dataset.action.toLowerCase() : (b.getAttribute('data-action') || '').toLowerCase();
        setActiveSidebar(b);
        switch (action) {
          case 'home':
            showToast('Home (no page)'); break;
          case 'events':
            showToast('Events (no page)'); break;
          case 'audio':
            showToast('Audio (no action)'); break;
          case 'finance':
            showToast('Finance (no action)'); break;
          case 'members':
            showToast('Members (no page)'); break;
          case 'docs':
            showToast('Documents (no action)'); break;
          case 'logout':
            performLogout(); break;
          default:
            // fallback
            console.log('sidebar click', action);
            break;
        }
      });
    });
  }

  /* =========================
     Avatar (click to upload preview)
     ========================= */
  function wireAvatar() {
    const avatar = document.querySelector('.avatar-circle');
    if (!avatar) return;
    // create hidden file input
    let fileInput = document.createElement('input');
    fileInput.type = 'file';
    fileInput.accept = 'image/*';
    fileInput.style.display = 'none';
    document.body.appendChild(fileInput);

    fileInput.addEventListener('change', (e) => {
      const f = e.target.files && e.target.files[0];
      if (!f) return;
      const reader = new FileReader();
      reader.onload = function(ev) {
        avatar.style.backgroundImage = `url('${ev.target.result}')`;
        avatar.style.backgroundSize = 'cover';
        avatar.style.backgroundPosition = 'center';
        // hide the initial letter if any
        avatar.textContent = '';
      };
      reader.readAsDataURL(f);
    });

    avatar.addEventListener('click', () => fileInput.click());
  }

  /* =========================
     Gender selection highlight
     ========================= */
  function wireGender() {
    const genderBlock = document.querySelector('.gender-block');
    if (!genderBlock) return;
    const radios = Array.from(genderBlock.querySelectorAll('input[type="radio"]'));
    const labels = radios.map(r => r.closest('label') || r.parentElement);

    function updateUI(selectedRadio) {
      labels.forEach(lbl => {
        if (!lbl) return;
        lbl.style.opacity = '0.9';
        lbl.style.color = ''; // default
        lbl.style.boxShadow = '';
        lbl.style.borderRadius = '';
      });
      if (selectedRadio) {
        const selLabel = selectedRadio.closest('label') || selectedRadio.parentElement;
        if (selLabel) {
          selLabel.style.boxShadow = '0 6px 18px rgba(157,110,235,0.14)';
          selLabel.style.borderRadius = '8px';
        }
      }
    }

    radios.forEach(r => {
      r.addEventListener('change', () => updateUI(r));
      // initialize
      if (r.checked) updateUI(r);
    });
  }

  /* =========================
     Small utility to read input values by label text
     (useful because form inputs in provided HTML don't have IDs)
     ========================= */
  function getFieldValueByLabel(labelStart) {
    const fields = Array.from(document.querySelectorAll('.field'));
    for (const f of fields) {
      const label = f.querySelector('label');
      if (!label) continue;
      if (label.textContent.trim().toLowerCase().startsWith(labelStart.toLowerCase())) {
        const input = f.querySelector('input, textarea, select');
        if (input) return input.value.trim();
      }
    }
    return '';
  }

  /* =========================
     Done button behaviour (validate & show toast)
     ========================= */
  function wireDoneButton() {
    const done = document.querySelector('.btn-done');
    if (!done) return;
    done.addEventListener('click', (e) => {
      e.preventDefault();
      const first = getFieldValueByLabel('First Name') || getFieldValueByLabel('First');
      const role = getFieldValueByLabel('Role');
      const email = getFieldValueByLabel('Email') || getFieldValueByLabel('E-mail');

      // basic validation
      if (!first) { showToast('First name is required'); return; }
      if (!role)  { showToast('Role is required'); return; }
      if (!email || !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) { showToast('Please provide a valid email'); return; }

      // simulate save (replace with actual save call)
      showToast('Profile updated successfully');
      console.log('Saved profile:', { first, role, email });

      // optionally animate button as feedback
      done.animate([{ transform: 'translateY(0)' }, { transform: 'translateY(-6px)' }, { transform: 'translateY(0)' }], { duration: 320 });
    });
  }

  /* =========================
     Logout (simulated)
     ========================= */
  function performLogout() {
    const overlay = el('div');
    overlay.style.cssText = 'position:fixed;inset:0;background:var(--bg,#111);z-index:10000;display:flex;align-items:center;justify-content:center;color:white;font-size:20px;opacity:0;transition:opacity .4s';
    overlay.innerHTML = '<div>Signing out…</div>';
    document.body.appendChild(overlay);
    requestAnimationFrame(() => overlay.style.opacity = '1');
    setTimeout(() => {
      overlay.innerHTML = '<div>Signed out — returning to home</div>';
      setTimeout(() => {
        overlay.style.opacity = '0';
        setTimeout(() => overlay.remove(), 300);
        showToast('Signed out (simulated)');
      }, 800);
    }, 700);
  }

  /* =========================
     Init
     ========================= */
  function init() {
    // wire sidebar & button states
    wireSidebar();

    // wire avatar upload / preview
    wireAvatar();

    // wire gender highlight
    wireGender();

    // wire done button
    wireDoneButton();

    // expose some quick debug hooks
    window.SC = Object.assign(window.SC || {}, {
      state,
      performLogout,
      showToast,
      Modal
    });

    // try to set initial active sidebar (home)
    if (nodes.sidebarBtns && nodes.sidebarBtns.length) {
      const homeBtn = nodes.sidebarBtns.find(b => (b.dataset && b.dataset.action && b.dataset.action.toLowerCase() === 'home'));
      setActiveSidebar(homeBtn || nodes.sidebarBtns[0]);
    }
  }

  // Run on DOM ready (works with defer script)
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }

})();

</html>
