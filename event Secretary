<script>
  const STORAGE_KEY = 'club_events';
  let events = [];
  let activeEventIdForParticipants = null;

  function loadEvents() {
    try {
      const raw = localStorage.getItem(STORAGE_KEY);
      events = raw ? JSON.parse(raw) : [];
    } catch (e) {
      events = [];
    }
  }

  function persist() {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(events));
  }

  function renderEventsTable() {
    const tbody = document.getElementById('events-body');
    tbody.innerHTML = '';

    if (!events.length) {
      const row = document.createElement('tr');
      row.className = 'empty';
      row.innerHTML =
        '<td colspan="6">No events yet â€” click "create event" to add one.</td>';
      tbody.appendChild(row);
      return;
    }

    events.forEach((ev) => {
      const tr = document.createElement('tr');
      const currentCount = (ev.participants || []).length;
      tr.innerHTML = `
        <td>${ev.name}</td>
        <td>${ev.date || '-'}</td>
        <td>${ev.location || '-'}</td>
        <td>
          <button class="link-btn"
                  data-id="${ev.id}"
                  data-action="participants">
            ${currentCount}/${ev.maxParticipants || 0}
          </button>
        </td>
        <td>${ev.status || 'open'}</td>
        <td>
          <div class="action-cell">
            <button class="icon-btn edit" aria-label="Edit"
                    data-id="${ev.id}" data-action="edit">âœï¸</button>
            <button class="icon-btn danger" aria-label="Delete"
                    data-id="${ev.id}" data-action="delete">ğŸ—‘ï¸</button>
          </div>
        </td>
      `;
      tbody.appendChild(tr);
    });
  }

  /* EVENT DIALOG */
  function openEventDialog(mode = 'create', payload = {}) {
    const dialog = document.getElementById('event-dialog');
    const title = document.getElementById('event-dialog-title');
    const form = document.getElementById('event-form');

    title.textContent = mode === 'edit' ? 'Edit event' : 'Create event';
    form.reset();

    document.getElementById('event-id').value = payload.id || '';
    document.getElementById('event-name').value = payload.name || '';
    document.getElementById('event-date').value = payload.date || '';
    document.getElementById('event-location').value = payload.location || '';
    document.getElementById('event-max').value = payload.maxParticipants || '';
    document.getElementById('event-status').value = payload.status || 'open';

    dialog.hidden = false;
  }

  function closeEventDialog() {
    document.getElementById('event-dialog').hidden = true;
  }

  function handleEventSubmit(e) {
    e.preventDefault();
    const id = document.getElementById('event-id').value;

    const entry = {
      id: id || (window.crypto && crypto.randomUUID ? crypto.randomUUID() : String(Date.now())),
      name: document.getElementById('event-name').value.trim(),
      date: document.getElementById('event-date').value,
      location: document.getElementById('event-location').value.trim(),
      maxParticipants: Number(document.getElementById('event-max').value),
      status: document.getElementById('event-status').value,
      participants: []
    };

    // Ù„Ùˆ ØªØ¹Ø¯ÙŠÙ„ØŒ Ù†Ø­Ø§ÙØ¸ Ø¹Ù„Ù‰ Ø§Ù„Ù…Ø´Ø§Ø±ÙƒÙŠÙ† Ø§Ù„Ù‚Ø¯Ø§Ù…Ù‰
    if (id) {
      const old = events.find(ev => ev.id === id);
      if (old && old.participants) entry.participants = old.participants;
    }

    if (!entry.name || !entry.date || !entry.location || !entry.maxParticipants) {
      alert('Please fill in all required fields');
      return;
    }

    if (id) {
      events = events.map((ev) => (ev.id === id ? entry : ev));
    } else {
      events.push(entry);
    }

    persist();
    renderEventsTable();
    closeEventDialog();
  }

  /* PARTICIPANTS DIALOG */
  function renderParticipants(ev) {
    const tbody = document.getElementById('participants-body');
    tbody.innerHTML = '';

    const list = ev.participants || [];

    if (!list.length) {
      const row = document.createElement('tr');
      row.className = 'empty';
      row.innerHTML = '<td colspan="3">No participants yet for this event.</td>';
      tbody.appendChild(row);
      return;
    }

    list.forEach((p) => {
      const tr = document.createElement('tr');
      tr.innerHTML = `
        <td>${p.name}</td>
        <td>${p.email}</td>
        <td>
          <button class="icon-btn danger"
                  data-id="${p.id}"
                  data-action="remove-participant">ğŸ—‘ï¸</button>
        </td>
      `;
      tbody.appendChild(tr);
    });
  }

  function openParticipantsDialog(eventId) {
    const ev = events.find(e => e.id === eventId);
    if (!ev) return;

    activeEventIdForParticipants = eventId;
    document.getElementById('participants-title').textContent =
      'Participants â€“ ' + (ev.name || '');
    renderParticipants(ev);
    document.getElementById('participants-dialog').hidden = false;
  }

  function closeParticipantsDialog() {
    document.getElementById('participants-dialog').hidden = true;
    activeEventIdForParticipants = null;
    document.getElementById('participants-form').reset();
  }

  function handleParticipantsSubmit(e) {
    e.preventDefault();
    if (!activeEventIdForParticipants) return;

    const name = document.getElementById('participant-name').value.trim();
    const email = document.getElementById('participant-email').value.trim();

    if (!name || !email) {
      alert('Please fill in participant name and email');
      return;
    }

    const ev = events.find(ev => ev.id === activeEventIdForParticipants);
    if (!ev) return;

    if (!ev.participants) ev.participants = [];

    ev.participants.push({
      id: (window.crypto && crypto.randomUUID ? crypto.randomUUID() : String(Date.now())),
      name,
      email
    });

    persist();
    renderParticipants(ev);
    renderEventsTable();
    document.getElementById('participants-form').reset();
  }

  function handleParticipantsTableClick(e) {
    const action = e.target?.dataset?.action;
    if (action !== 'remove-participant') return;
    if (!activeEventIdForParticipants) return;

    const participantId = e.target.dataset.id;
    const ev = events.find(ev => ev.id === activeEventIdForParticipants);
    if (!ev || !ev.participants) return;

    ev.participants = ev.participants.filter(p => p.id !== participantId);
    persist();
    renderParticipants(ev);
    renderEventsTable();
  }

  /* TABLE CLICKS (edit/delete/participants) */
  function handleEventsTableClick(e) {
    const action = e.target?.dataset?.action;
    if (!action) return;

    const id = e.target.dataset.id;
    const targetEvent = events.find((ev) => ev.id === id);
    if (!targetEvent) return;

    if (action === 'delete') {
      if (confirm('Delete this event?')) {
        events = events.filter((ev) => ev.id !== id);
        persist();
        renderEventsTable();
      }
    }

    if (action === 'edit') {
      openEventDialog('edit', targetEvent);
    }

    if (action === 'participants') {
      openParticipantsDialog(id);
    }
  }

  /* BIND EVENTS */
  function bindEvents() {
    document
      .getElementById('create-event')
      .addEventListener('click', () => openEventDialog('create'));

    document
      .getElementById('close-event-dialog')
      .addEventListener('click', closeEventDialog);

    document
      .getElementById('cancel-event-dialog')
      .addEventListener('click', closeEventDialog);

    document
      .getElementById('event-form')
      .addEventListener('submit', handleEventSubmit);

    document
      .getElementById('events-body')
      .addEventListener('click', handleEventsTableClick);

    document
      .getElementById('participants-form')
      .addEventListener('submit', handleParticipantsSubmit);

    document
      .getElementById('participants-body')
      .addEventListener('click', handleParticipantsTableClick);

    document
      .getElementById('close-participants-dialog')
      .addEventListener('click', closeParticipantsDialog);

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeEventDialog();
        closeParticipantsDialog();
      }
    });
  }

  function init() {
    loadEvents();
    renderEventsTable();
    bindEvents();
  }

  init();
</script>
</body>
</html>
