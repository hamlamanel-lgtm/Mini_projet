<script>
  const STORAGE_KEY = 'club_members';
  let members = [];

  function loadMembers() {
    try {
      const raw = localStorage.getItem(STORAGE_KEY);
      members = raw ? JSON.parse(raw) : [];
    } catch (e) {
      members = [];
    }
  }

  function persist() {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(members));
  }

  function renderTable() {
    const tbody = document.getElementById('members-body');
    tbody.innerHTML = '';

    if (!members.length) {
      const row = document.createElement('tr');
      row.className = 'empty';
      row.innerHTML =
        '<td colspan="7">No data available yet â€” click "Add Member" to start adding entries.</td>';
      tbody.appendChild(row);
      return;
    }

    members.forEach((m) => {
      const tr = document.createElement('tr');
      const birthday = m.birthday || m.join_date || '-'; // Ø¯Ø¹Ù… Ø¨ÙŠØ§Ù†Ø§Øª Ù‚Ø¯ÙŠÙ…Ø© Ù„Ùˆ Ù…ÙˆØ¬ÙˆØ¯Ø©
      const gender = m.gender || m.role || '-';

      tr.innerHTML = `
        <td>${m.first_name}</td>
        <td>${m.last_name}</td>
        <td>${m.email}</td>
        <td>${m.password || m.password_hash || '-'}</td>
        <td>${birthday}</td>
        <td>${gender}</td>
        <td>
          <div class="action-cell">
            <button class="icon-btn edit" aria-label="Edit"
                    data-id="${m.id}" data-action="edit">âœï¸</button>
            <button class="icon-btn danger" aria-label="Delete"
                    data-id="${m.id}" data-action="delete">ğŸ—‘ï¸</button>
          </div>
        </td>
      `;
      tbody.appendChild(tr);
    });
  }

  function openDialog(mode = 'create', payload = {}) {
    const dialog = document.getElementById('dialog');
    const title = document.getElementById('dialog-title');
    const form = document.getElementById('member-form');

    title.textContent = mode === 'edit' ? 'Edit member' : 'Add member';
    form.reset();

    document.getElementById('member-id').value = payload.id || '';
    document.getElementById('first-name').value = payload.first_name || '';
    document.getElementById('last-name').value = payload.last_name || '';
    document.getElementById('email').value = payload.email || '';
    document.getElementById('password').value = payload.password || payload.password_hash || '';
    document.getElementById('birthday').value = payload.birthday || payload.join_date || '';
    document.getElementById('gender').value = payload.gender || payload.role || 'Female';

    dialog.hidden = false;
  }

  function closeDialog() {
    document.getElementById('dialog').hidden = true;
  }

  function handleSubmit(event) {
    event.preventDefault();
    const id = document.getElementById('member-id').value;

    const entry = {
      id: id || (window.crypto && crypto.randomUUID ? crypto.randomUUID() : String(Date.now())),
      first_name: document.getElementById('first-name').value.trim(),
      last_name: document.getElementById('last-name').value.trim(),
      email: document.getElementById('email').value.trim(),
      password: document.getElementById('password').value.trim(),
      birthday: document.getElementById('birthday').value,
      gender: document.getElementById('gender').value,
    };

    if (!entry.first_name || !entry.last_name ||
        !entry.email || !entry.password || !entry.birthday) {
      alert('Please fill in all required fields');
      return;
    }

    if (id) {
      members = members.map((m) => (m.id === id ? entry : m));
    } else {
      members.push(entry);
    }

    persist();
    renderTable();
    closeDialog();
  }

  function handleTableClick(event) {
    const action = event.target?.dataset?.action;
    if (!action) return;

    const id = event.target.dataset.id;
    const targetMember = members.find((m) => m.id === id);
    if (!targetMember) return;

    if (action === 'delete') {
      if (confirm('Delete this member?')) {
        members = members.filter((m) => m.id !== id);
        persist();
        renderTable();
      }
    }

    if (action === 'edit') {
      openDialog('edit', targetMember);
    }
  }

  function bindEvents() {
    document
      .getElementById('add-member')
      .addEventListener('click', () => openDialog('create'));
    document
      .getElementById('close-dialog')
      .addEventListener('click', closeDialog);
    document
      .getElementById('cancel-dialog')
      .addEventListener('click', closeDialog);
    document
      .getElementById('member-form')
      .addEventListener('submit', handleSubmit);
    document
      .getElementById('members-body')
      .addEventListener('click', handleTableClick);
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeDialog();
    });
  }

  function init() {
    loadMembers();
    renderTable();
    bindEvents();
  }

  init();
</script>
</body>
</html>
